<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.neighbour_list.DetailsNeighbourActivity"
    android:background="@android:color/darker_gray">

    <ImageView
        android:id="@+id/neighbour_avatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/first_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/return_arrow"
        android:layout_width="34dp"
        android:layout_height="39dp"
        android:src="@drawable/ic_return_arrow"
        app:layout_goneMarginLeft="20dp"
        app:layout_goneMarginRight="20dp" />

    <TextView
        android:id="@+id/first_neighbour_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Caroline"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="38sp"
        app:layout_editor_absoluteX="20dp"
        app:layout_editor_absoluteY="210dp"/>

    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/first_guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:layout_height="match_parent"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/neighbour_avatar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/Second_neighbour_name"
                android:layout_width="112dp"
                android:layout_height="31dp"
                android:layout_marginBottom="10dp"
                android:text="@string/Caroline"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/localisation_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_editor_absoluteX="16dp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                tools:layout_editor_absoluteX="-3dp"
                tools:layout_editor_absoluteY="49dp" />

            <ImageView
                android:id="@+id/localisation_logo"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_localisation_point"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/localisation"
                android:layout_width="330dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:text="Saint-Pierre du Mont à 5 kms"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/localisation_logo"
                app:layout_editor_absoluteY="64dp" />

            <ImageView
                android:id="@+id/phone_number_logo"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@+id/localisation_logo"
                app:layout_editor_absoluteX="16dp"
                app:srcCompat="@drawable/ic_phone" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="330dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:text="+33 6 86 57 90 14"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/phone_number_logo"
                app:layout_constraintTop_toBottomOf="@+id/localisation" />

            <ImageView
                android:id="@+id/web_logo"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@+id/phone_number_logo"
                app:layout_editor_absoluteX="16dp"
                app:srcCompat="@drawable/ic_web_icon" />

            <TextView
                android:id="@+id/website"
                android:layout_width="330dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:text="www.facebook.fr/caroline"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/web_logo"
                app:layout_constraintTop_toBottomOf="@+id/phone_number" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">
     <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <TextView
             android:id="@+id/description_title "
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="16dp"
             android:layout_marginLeft="15dp"
             android:text="A propos de moi"
             android:textColor="@android:color/black"
             android:textSize="24sp"
             app:layout_constraintTop_toTopOf="parent" />

         <View
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:layout_marginTop="3dp"
             android:background="@android:color/darker_gray"
             app:layout_constraintTop_toBottomOf="@+id/description_title "/>

         <TextView
             android:id="@+id/description_details"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Bonjour ! Je souhaiterais faire de la marche nordique. Pas initiée, je recherche une ou plusieurs personnes susceptible de m'accompagner !J'aime les jeux de cartes  tels la belote et le tarot.."
             android:textAlignment="textStart"
             android:textSize="16sp"
             android:layout_marginLeft="14dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/description_title "/>
     </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_fav_icon"
        android:clickable="true"
        android:src="@drawable/ic_star_white_24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/first_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/first_guideline"
        app:layout_constraintVertical_bias="0.533" />


</android.support.constraint.ConstraintLayout>